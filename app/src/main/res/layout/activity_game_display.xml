<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_game_display"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/disp_bg"
    android:orientation="vertical"
    tools:context=".GameDisplay">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/boardGameConstraint"
        android:layout_width="319dp"
        android:layout_height="403dp"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:foregroundGravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.757">

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="58dp"
        android:layout_height="71dp"
        app:layout_constraintBottom_toBottomOf="@+id/boardGameConstraint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.016"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.008"
        app:srcCompat="@drawable/goback" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="197dp"
        android:layout_height="34dp"
        android:layout_marginStart="88dp"
        android:layout_marginLeft="88dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="63dp"
        android:layout_marginRight="63dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="SCOREBOARD"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:fontFamily="serif"
        app:layout_constraintBottom_toTopOf="@+id/PLAYER 1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.26"
        app:layout_constraintStart_toEndOf="@+id/imageView9"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@id/Player 1"
        android:layout_width="170dp"
        android:layout_height="44dp"
        android:gravity="center"
        android:lineSpacingExtra="8sp"
        android:text="@string/playerOneName"
        android:textColor="#000000"
        android:textSize="24sp"
        app:fontFamily="serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="53dp" />

    <TextView
        android:id="@id/Player 1"
        android:layout_width="170dp"
        android:layout_height="38dp"
        android:gravity="center"
        android:text="@string/playerTwoName"
        android:textColor="#000000"
        android:textSize="24sp"
        app:fontFamily="serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="93dp" />

    <TextView
        android:id="@+id/Score1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="326dp"
        tools:layout_editor_absoluteY="60dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="57dp"
        android:layout_height="34dp"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="30sp"
        app:fontFamily="serif"
        tools:layout_editor_absoluteX="293dp"
        tools:layout_editor_absoluteY="97dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="56dp"
        android:layout_height="39dp"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="30sp"
        app:fontFamily="serif"
        tools:layout_editor_absoluteX="294dp"
        tools:layout_editor_absoluteY="54dp" />


</androidx.constraintlayout.widget.ConstraintLayout>